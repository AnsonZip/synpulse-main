{
  "name": "synpulse-test",
  "version": "1.0.0",
  "description": "An API REST created with Typescript kafka",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./src/index.ts",
    "start2": "node",
    "start": "node -r ts-node/register ./src/index.ts",
    "lint": "tslint --project tslint.json",
    "build-watch": "tsc --watch",
    "watch": "nodemon",
    "test": "mocha --require ts-node/register tests/**/*.ts --timeout 20000",
    "doc": "typedoc --out docs --mode file --name \"Typescript + Express + Firestore - API Rest\" --exclude tests/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnsonZip/synpulse.git"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "."
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "keywords": [
    "Typescript",
    "Express",
    "Kafka"
  ],
  "author": "Anson Cheung <ansoncheung21@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/uniqid": "^5.3.2",
    "@types/uuid": "^8.3.4",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typedoc": "^0.14.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "node-rdkafka": "^2.12.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "uniqid": "^5.4.0",
    "uuid": "^8.3.2"
  }
}
