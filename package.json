{
  "name": "synpulse-test",
  "version": "1.0.0",
  "description": "An API REST created with Typescript kafka",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r ts-node/register ./src/index.ts",
    "watch": "nodemon",
    "test": "mocha -r ts-node/register ./src/tests/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnsonZip/synpulse.git"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "."
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "keywords": [
    "Typescript",
    "Express",
    "Kafka"
  ],
  "author": "Anson Cheung <ansoncheung21@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/chai": "^4.3.0",
    "@types/chai-uuid": "^1.0.2",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/faker": "^6.6.9",
    "@types/mocha": "^9.1.0",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/sinon": "^10.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uniqid": "^5.3.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.1",
    "chai": "^4.3.6",
    "chai-uuid": "^1.0.6",
    "faker": "^6.6.6",
    "mocha": "^9.2.1",
    "nodemon": "^1.18.9",
    "sinon": "^13.0.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "bunyan": "^1.8.15",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "node-rdkafka": "^2.12.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "uniqid": "^5.4.0",
    "uuid": "^8.3.2"
  }
}
